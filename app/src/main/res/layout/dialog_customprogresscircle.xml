<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_progresscircle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.rey.material.widget.ProgressView
        android:id="@+id/dialog_progress"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="15dp"
        app:pv_autostart="true"
        app:pv_circular="true"
        app:pv_progressStyle="@style/Material.Drawable.CircularProgress"
        app:pv_progressMode="indeterminate"
        app:layout_constraintStart_toStartOf="@id/dialog_progresscircle"
        app:layout_constraintTop_toTopOf="@+id/dialog_progresscircle"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_progresscircle"
        />

    <TextView
        android:id="@+id/dialog_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="앨범을 생성 중 입니다."
        android:gravity="center"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="@+id/dialog_progress"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_progress"
        app:layout_constraintStart_toEndOf="@+id/dialog_progress"
        app:layout_constraintEnd_toEndOf="@+id/dialog_progresscircle"/>

</androidx.constraintlayout.widget.ConstraintLayout>