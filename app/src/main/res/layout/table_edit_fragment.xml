<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:background="@color/half_black"
    android:layout_marginTop="420dp"
    android:layout_marginBottom="15dp">

    <Button
        android:id="@+id/btn_edit_cancel"
        android:text="X"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/half_black"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/frag_text_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btn_edit_accept"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:background="@color/half_black"
        android:text="O"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/frag_edit_spin"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btn_edit_cancel"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/frag_text_1"
        android:text=" : "
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginStart="5dp"
        android:layout_below="@id/btn_edit_cancel"
        android:layout_toRightOf="@id/frag_edit_spin"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/frag_edit_hour"
        android:layout_below="@id/btn_edit_cancel"
        android:layout_toRightOf="@id/frag_text_1"
        android:hint="00"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/frag_text_2"
        android:text="시"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_below="@id/btn_edit_cancel"
        android:layout_toRightOf="@id/frag_edit_hour"
        android:layout_marginTop="10dp"
        android:layout_marginStart="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/frag_edit_min"
        android:layout_below="@id/btn_edit_cancel"
        android:layout_toRightOf="@id/frag_text_2"
        android:hint="00"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/frag_text_3"
        android:text="분"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_below="@id/btn_edit_cancel"
        android:layout_toRightOf="@id/frag_edit_min"
        android:layout_marginTop="10dp"
        android:layout_marginStart="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
    android:id="@+id/frag_text_4"
    android:layout_below="@id/frag_edit_spin"
    android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
    android:text="장소 : "
    android:textColor="@color/white"
    android:textSize="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/frag_edit_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frag_edit_spin"
        android:layout_toRightOf="@id/frag_text_4"
        android:hint="장소를 입력하세요"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/frag_text_5"
        android:layout_below="@id/frag_text_4"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="메모 : "
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/frag_edit_memo"
        android:layout_below="@id/frag_text_4"
        android:layout_toEndOf="@id/frag_text_5"
        android:hint="메모를 입력하세요"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>
